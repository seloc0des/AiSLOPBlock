{
  "manifest_version": 3,
  "name": "NoAI Slop Cleaner",
  "version": "0.2.0",
  "description": "Hides AI panels and AI-themed ads, and blocks known AI-slop domains.",
  "permissions": ["storage", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "sw.js", "type": "module" },
  "action": { "default_popup": "ui/popup.html" },
  "options_page": "ui/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "cleaners/google-cleaner.js",
        "cleaners/facebook-cleaner.js",
        "cleaners/news-cleaner.js",
        "cleaners/youtube-cleaner.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
